<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_2025_01_Home_Devices_Mobile.MainPage"
             BackgroundColor="#ADD8E6">
    <ScrollView>
        <VerticalStackLayout Padding="10"
                             Spacing="5">
            <Label Text="Urzadzenia domowe"
                   FontSize="28"
                   HorizontalOptions="Center"
                   Margin="5" />
            <Label Text="Autor: 00000000000"
                   HorizontalOptions="Center"
                   Margin="5" />
            <HorizontalStackLayout Spacing="10"
                                   Margin="0,0,0,10">
                <Image Source="pralka.jpg"
                       HeightRequest="150"
                       Margin="20,0,20,20" />
                <VerticalStackLayout VerticalOptions="Center">
                    <Label Text="Pralka"
                           FontSize="24" />
                    <Entry x:Name="WashingEntry"
                           Placeholder="Podaj nr prania 1..12"
                           Keyboard="Numeric"
                           BackgroundColor="#87CEEB"
                           TextColor="#000080"
                           PlaceholderColor="#000080" />
                    <Button Text="Zatwierdz"
                            Clicked="OnWashing_Clicked"
                            BackgroundColor="#4169E1"
                            Margin="10" />
                    <Label x:Name="WashingResultLabel"
                           Text="Numer prania nie podano" />
                </VerticalStackLayout>
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="10">
                <Image Source="odkurzac.jpg"
                       HeightRequest="150"
                       Margin="20,20,0,20" />
                <VerticalStackLayout VerticalOptions="Center">
                    <Label Text="Odkurzac"
                           FontSize="24" />
                    <Button x:Name="VacuumButton"
                            Text="Włącz"
                            Clicked="OnVacuum_Clicked"
                            BackgroundColor="#4169E1"
                            Margin="10" />
                    <Label x:Name="VacuumStatusLabel"
                           Text="Odkurac wyłączony" />
                    <Label Text="Status: naładowany" />
                </VerticalStackLayout>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
